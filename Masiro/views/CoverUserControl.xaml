<UserControl x:Class="Masiro.views.CoverUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Masiro.views"
             mc:Ignorable="d">
    <Grid>
        <StackPanel
            Height="40"
            Orientation="Horizontal">
            <Label
                Style="{StaticResource NoBorderLabel}"
                FontSize="20"
                VerticalContentAlignment="Center"
                Margin="0,0,20,0">
                封面
            </Label>
            <TextBox
                x:Name="BookCoverEdit"
                Width="300"
                Margin="0,0,20,0" />
            <Button
                FontSize="20" BorderThickness="1,1,1,1" Padding="0,0,0,0" Height="36" Width="120">
                选择封面
            </Button>
        </StackPanel>
    </Grid>
</UserControl>